<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#303F9F"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:background="@drawable/jj" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/add_quality"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1">

        <EditText
            android:id="@+id/qualityname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Quality Name"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#9a9a9a" />

        <EditText
            android:id="@+id/yarn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Yarn Name"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textColorHint="#9a9a9a" />

        <EditText
            android:id="@+id/width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Width"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#9a9a9a" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Weight(in Kgs)"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#9a9a9a" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/addyarn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#303F9F"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Add Quality"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/backtohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:gravity="center"
            android:background="#303F9F"
            android:text="Back to Home"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>