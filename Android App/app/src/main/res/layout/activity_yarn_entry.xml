<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#303F9F"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:background="@drawable/jj" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Add Yarn"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/date_yarnentry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Enter Date"
                    android:inputType="date"
                    android:textColor="#000000"
                    android:textColorHint="#9a9a9a" />

                <EditText
                    android:id="@+id/takanumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Enter Challan Number"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#9a9a9a" />

                <EditText
                    android:id="@+id/lotnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Enter Lot Number"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#9a9a9a" />

                <Spinner
                    android:id="@+id/Quality_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textColorHint="#9a9a9a" />

                <EditText
                    android:id="@+id/netweight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Net Weight(in Kgs)"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#9a9a9a" />

                <EditText
                    android:id="@+id/company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Company Name"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHint="#9a9a9a" />

                <EditText
                    android:id="@+id/noofcartoons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="25dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Enter Number of Cartoons"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#9a9a9a" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
                <Button
                    android:id="@+id/addyarn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#303F9F"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Add Yarn"
                    android:textColor="#ffffff" />
                <Button
                    android:id="@+id/backtohome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#303F9F"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Back to Home"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>